const {Console} = require("console-mpds");
const console = new Console();

console.writeln(`Primera fracción:`);
const num1 = console.readNumber("Introduce el numerador de la primera fracción:");
const den1 = console.readNumber("Introduce el denominador de la primera fracción:");

console.writeln(`Segunda fracción:`);
const num2 = console.readNumber("Introduce el numerador de la segunda fracción:");
const den2 = console.readNumber("Introduce el denominador de la segunda fracción:");

console.writeln(`la suma de las fracciones ${num1}/${den1} y ${num2}/${den2} es la fracción ${num1*den2 + den1*num2}/${den1*den2}`);